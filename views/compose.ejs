
<%# connect ejs page %>
<%- include('partials/header'); -%>

<h1>Compose</h1>

<form class="" action="/compose" method="post">

  <div class="form-group">
    <label for="PostTitle" class="form-label">Post Title</label>
    <input type="text" class="form-control" name="postTitle" />
  </div>

  <div class="form-group">
    <label for="PostContents" class="form-label">Contents</label>
    <textarea name="postContents" class="form-control" rows="8" cols="80"></textarea>
  </div>

  <div class="form-group">
    <button class="btn btn-primary" type="submit" name="button">Publish</button>
  </div>

</form>

<%- include('partials/footer'); -%>
